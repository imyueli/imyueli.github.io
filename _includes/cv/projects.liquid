{% comment %}
  Unified projects entry renderer for both formats
{% endcomment %}

<ul class="card-text font-weight-light list-group list-group-flush">
  {% for entry in entries %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 col-sm-2 col-md-2 text-left date-column">
          {% capture start_date %}{{ entry.start_date }}{% endcapture %}
          {% capture end_date %}{{ entry.end_date }}{% endcapture %}

          {% if start_date != '' %}
            {% comment %} Extract year only from dates like "2025-05-01" {% endcomment %}
            {% assign startDate = start_date | split: '-' | first %}
            {% assign endDate = end_date | split: '-' | first | default: 'Present' %}
            {% assign date = startDate | append: ' - ' | append: endDate %}
          {% else %}
            {% assign date = null %}
          {% endif %}

          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  {% if date %}
                    <span class="badge font-weight-bold danger-color-dark text-uppercase" style="min-width: 75px">{{ date }}</span>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          {% if entry.url %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">
              <a href="{{ entry.url }}" target="_blank">{{ entry.name }}</a>
            </h6>
          {% else %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">{{ entry.name }}</h6>
          {% endif %}

          {% if entry.summary %}
            <p class="ml-1 ml-md-4">{{ entry.summary | markdownify | remove: '<p>' | remove: '</p>' }}</p>
          {% endif %}

          {% if entry.highlights %}
            <ul class="items">
              {% for item in entry.highlights %}
                <li>
                  <span class="item">{{ item | markdownify | remove: '<p>' | remove: '</p>' }}</span>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
